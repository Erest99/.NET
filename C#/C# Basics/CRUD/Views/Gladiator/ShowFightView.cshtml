@model CRUD.Models.DuelViewModel

@{
    ViewData["Title"] = "Duel";
}

<h4>Duel</h4>
<hr />
<div class="text-desctiption">
    <p>Select your fighters</p>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessBattle" method="post">
            <label class="form-label">Select first fighter</label>
            <select asp-items="Model.gladiatorsSelectList" class="form-control" asp-for="firstFighterID">
            </select>
            <label class="form-label">Select first fighter</label>
            <select asp-items="Model.gladiatorsSelectList" class="form-control" asp-for="secondFighterID">
            </select>
            <div class="form-group">
                <input type="submit" value="Fight" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    window.addEventListener("load", function () {
        var audio = document.getElementById("audio");
        audio.play();
    });
</script>

<audio id="audio" autoplay>
    <source src="~/Content/Audio/duelview.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>